<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Neue Kurznachricht (max. #{Micropost::MICROPOST_MAX_CHAR} Zeichen)..." %>
  </div>
  <%= f.submit "Kurznachricht senden", class: "btn btn-large btn-success", id: "commit" %>
<% end %>