<% provide(:title, 'All users') %>
<h1>Mitspieler</h1>
<div class=center>
	<%= link_to "Neuen Mitspieler erstellen", new_user_path, class: "btn btn-primary" if current_user.is_admin?%>
</div>
<div><br></div>
<ul class="users">
	<% if current_user.is_admin? %>
		<h2>Aktivierte Mitspieler</h2> 
	<% end %>

	<% if @activated_users %>	
		<div class="row">
		<aside>
			<% @activated_users.each do |user| %>
				<div class="span3">
					<%= render partial: 'user', locals: { user: user } %>
				</div>
	  		<%end%>
		</aside>
		</div>
	<%else%>
		<div class=center>Keine aktivierten Mitspieler vorhanden</div>
	<%end%>
	
</ul>
<section><div><br></div></section>
<ul class="users">
	<% if current_user.is_admin? %>
		<section>
			<h2>Deaktivierte Mitspieler</h2> 
		</section>
		<% if @deactivated_users %>
			<div class="row">
				<aside>
					<% @deactivated_users.each do |user| %>
						<div class="span3">
							<%= render :partial => 'user', locals: { user: user } %>
						</div>
			  		<%end%>
				</aside>
			</div>
		<%else%>
			<div class=center>Keine deaktivierten Mitspieler vorhanden</div>
		<%end%>
	<%end%>
	
</ul>

