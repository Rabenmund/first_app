<% provide(:title, @season.name) %>
<div class="row">
  <aside>
    <section>
      <h1>
        <%= @season.name %>
	  </h1>
	  <section>
		  <h5>
			<%= @season.start_date.day %>
			.
			<%= @season.start_date.month %>
			.
			<%= @season.start_date.year %>
			/  
			<%= @season.end_date.day %>
			.
			<%= @season.end_date.month %>
			.
			<%= @season.end_date.year %>		 
		  </h5>
		</section>
    </section>
	<section>
      <h3>
        Mannschaften
	  </h3>
    </section>
	<ul class="teams">
		<% if @season.teams.count > 0 %>
			<div class="row">
			<aside>
				<% @season.teams.each do |team| %>
					<div class="span3">
						<%= render partial: 'teams/team', locals: { team: team } %>
					</div>
		  		<%end%>
			</aside>
			</div>
		<%else%>
			<h6>Keine Mannschaften vorhanden</h6>
		<%end%>
	</ul>
	<section>
      <h3>
        Mitspieler
	  </h3>
    </section>
	<ul class="users">
		<% if @season.users.count > 0 %>
			<div class="row">
			<aside>
				<% @season.users.each do |user| %>
					<div class="span3">
						<%= render partial: 'users/user', locals: { user: user } %>
					</div>
		  		<%end%>
			</aside>
			</div>
		<%else%>
			<h6>Keine Mitspieler vorhanden</h6>
		<%end%>
	</ul>
	<section>
	  <%= link_to "Einstellungen", edit_season_path(@season), class: "btn" if current_user.is_admin? %>
	</section>
  </aside>
</div>