source 'https://rubygems.org'

gem 'rails'                          
gem 'bootstrap-sass'
gem 'bcrypt-ruby'
gem 'faker'
gem 'will_paginate'
gem 'bootstrap-will_paginate'
gem 'rails-i18n'

group :development, :test do
  gem 'sqlite3'
  #mysql2
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
  gem 'database_cleaner'
  gem 'simplecov'
  gem 'guard-rspec'
  gem 'launchy'
  gem 'forgery'
end

group :production do
  gem 'pg'
end